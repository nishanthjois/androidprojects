<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="nano.nj.myappportfolio.MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="My Nanodegree Apps"
        android:id="@+id/tvHeader"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Popular Movies"
        android:id="@+id/btnPopularMovies"
        android:layout_marginTop="35dp"
        android:layout_below="@+id/tvHeader"
        android:layout_alignStart="@+id/tvHeader" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Stock Hawk"
        android:id="@+id/btnStockHawk"
        android:layout_below="@+id/btnPopularMovies"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Build it Bigger"
        android:id="@+id/btnBuilditBigger"
        android:layout_below="@+id/btnStockHawk"
        android:layout_alignStart="@+id/btnPopularMovies" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Make Your App Material"
        android:id="@+id/btnMakeYourAppMaterial"
        android:layout_below="@+id/btnBuilditBigger"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Go Ubiquitous"
        android:id="@+id/btnGoUbiquitous"
        android:layout_below="@+id/btnMakeYourAppMaterial"
        android:layout_alignStart="@+id/tvHeader" />

    <Button
        android:onClick="mProject"
        style="@style/ButtonStyle"
        android:text="Capstone"
        android:id="@+id/btnCapstone"
        android:layout_below="@+id/btnGoUbiquitous"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
